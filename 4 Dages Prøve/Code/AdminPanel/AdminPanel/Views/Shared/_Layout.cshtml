@using Prototyping.Ipsum;
@using Prototyping.Placeholdit; 

@{
    if (WebSecurity.IsAuthenticated)
    {
        ViewBag.CurrentName = WebSecurity.CurrentUserName;
    }
}
   
<!DOCTYPE html>
<!--[if IE 8]> 				 <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />

    @*Set the viewport width to device width for mobile *@
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title - Form Works Architects</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/css")

    @RenderSection("head", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">
        <aside class="sidebar">
            <div class="ProfileWrapper">
                @if (Request.IsAuthenticated)
                {
                    
                <section class="ProfileAvatar">
                    <div class="AvatarImage">@Html.Placehold(25, 25)</div>
                    <div class="AvatartName"><a href="@Url.Action("Manage", "Account")">@ViewBag.CurrentName</a></div>
                </section>
                }
            </div>
            <nav class="sideNav">
                <ul>
                @{
                    string CurrentPage = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
                }
                    <li class="label"><label>Site</label></li>
                    @if(CurrentPage == "Dashboard"){
                        <li class="active"><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i>Dashboard</a></li>    
                    }else{
                        <li ><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i>Dashboard</a></li>
                    }
                    @if(CurrentPage == "Pages"){
                        <li class="active"><a href="@Url.Action("Index", "Pages")"><i class="fa fa-files-o"></i>Pages</a></li>
                    }else{
                        <li><a href="@Url.Action("Index", "Pages")"><i class="fa fa-files-o"></i>Pages</a></li>
                    }
                    @if (CurrentPage == "Media")
                    {
                        <li class="active"><a href="@Url.Action("Index", "Media")"><i class="fa fa-picture-o"></i>Media</a></li>
                    }else{
                        <li><a href="@Url.Action("Index", "Media")"><i class="fa fa-picture-o"></i>Media</a></li>
                    }
                    @if (CurrentPage == "Projects")
                    {
                        <li class="active"><a href="@Url.Action("Index", "Projects")"><i class="fa fa-hdd-o"></i>Projects</a></li>
                    }else{
                        <li><a href="@Url.Action("Index", "Projects")"><i class="fa fa-hdd-o"></i>Projects</a></li>
                    }
                    @if (CurrentPage == "News")
                    {
                        <li class="active"><a href="@Url.Action("Index", "News")"><i class="fa fa-file-text-o"></i>News</a></li>
                    }else{
                        <li><a href="@Url.Action("Index", "News")"><i class="fa fa-file-text-o"></i>News</a></li>
                    }
                    @if (CurrentPage == "Users")
                    {
                        <li class="active"><a href="@Url.Action("Index", "Users")"><i class="fa fa-users"></i>Users</a></li>
                    }else{
                        <li><a href="@Url.Action("Index", "Users")"><i class="fa fa-users"></i>Users</a></li>
                    }
                    @if (CurrentPage == "Settings")
                    {
                        <li class="active"><a href="@Url.Action("Index", "Settings")"><i class="fa fa-gears"></i>Settings</a></li>
                    }else{
                        <li><a href="@Url.Action("Index", "Settings")"><i class="fa fa-gears"></i>Settings</a></li>
                    }  
                </ul>
                <ul>
                    <li class="label"><label>Personal</label></li>
                    <li class="disabled"><a href="#"><i class="fa fa-envelope-o"></i>Messages</a></li>
                    @if (CurrentPage == "Account")
                    {
                        <li  class="active"><a href="@Url.Action("Manage", "Account")"><i class="fa fa-user"></i>My Profile</a></li>
                    }else{
                        <li><a href="@Url.Action("Manage", "Account")"><i class="fa fa-user"></i>My Profile</a></li>
                    } 
                    
                    <li class="disabled"><a href="#"><i class="fa fa-bar-chart-o"></i>Analytics</a></li>
                </ul>
            </nav>
        </aside>
        <div class="content">
            <div class="contentNav">
                <div class="row">
                    <div class="large-12 columns alpha">
                        <nav class="topNav">
                            <section id="login" class="right hide-for-small">
                                        @Html.Partial("_LoginPartial")
                            </section>
                            @RenderSection("ContentMenu", required: false)
                        </nav>
                    </div>
                </div>
            </div>
            
            <div class="contentHolder">
                @RenderSection("featured", required: false)
                <div class="mainrow">
                @RenderBody()
                </div>
            </div>  
                    
                
            
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/foundation")
    @*<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>*@
    @*<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>*@
    <script>
        $(document).foundation();
    </script>
    @*Use the Scripts section to define page specific scripts*@
    @RenderSection("scripts", required: false)


</body>
</html>
